<body>
  <%- include('component/header',{flag,user,image:"/todo/"+image}) %>
      
    <div id="task" >
        
        <div id="checkbox">
            <h2>Todo List</h2>
            <table id="list">
            
                <!-- <tr><td><input type="checkbox" name="packersOff" id="packers" class="packers" value="1"/>
                    <label for="packers" class="strikethrough">sssssssss</label></td>
                    <td><button id="delete" value="delete">X</button></td>
                </tr> -->
                <% for(var i=0;i<todo.length;i++) { %>
                    <tr><td>
                        <% if(todo[i].completed) { %>
                            <input type="checkbox" name="packersOff" id="packers" class="packers" value="<%= todo[i].text %>" checked/>
                        <% } else { %>
                            <input type="checkbox" name="packersOff" id="packers" class="packers" value="<%= todo[i].text %>"/>
                        <% } %>
                        <label for="packers" class="strikethrough"><%= todo[i].text %></label></td>
                        <td><img id="todo-img" name="<%= todo[i].text %>" src="<%=todo[i].image%>" width="20" height="20"/></td>
                        <td><button id="delete" value="<%= todo[i].text %>"><img id="rmv" name="<%= todo[i].text %>" src="/images/bin.png" width="20" height="20"/></button></td>
                    </tr>
                <% } %>
            </table>
        </div>
        <div id="todo-form" >
            <h2>What's Left?</h2>
            <form id="type" method="POST" enctype="multipart/form-data">
                
                <input type="text" name="text" id="name" placeholder="I need to ..." style="text-align: left;">
                <input type="file" name="photo" id="fotu" required style="margin: 10% 0 10% 0;">
            <button id="add" value="add" class="btn btn-secondary btn-sm" >Add</button></td>
                </form>
        </div>
    </div>
    
    <script src="./sc.js"></script>
</body>
</html>